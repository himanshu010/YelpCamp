<%-include("../header")%>
<div class="container" >
    <div class="row">
        <h1 style="text-align: center;">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin:30px auto ">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%=campground.price%>" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="url"  value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">Submit</button>
                </div>
            </form> 
            <a href="/campgrounds">Back To Campgrounds</a> 
        </div>
    </div>
</div>
<%-include("../footer")%>