<%-include("../header")%>
<div class="container" >
    <div class="row">
        <h1 style="text-align: center;">Add A New Campground</h1>
        <div style="width: 30%; margin:30px auto ">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="Price" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="url"  placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">Submit</button>
                </div>
            </form> 
            <a href="/campgrounds">Back To Campgrounds</a> 
        </div>
    </div>
</div>
<%-include("../footer")%>